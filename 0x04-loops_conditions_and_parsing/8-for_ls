#!/usr/bin/env bash
# This script displays the content of the current directory, showing only the part of each filename after the first dash

# Loop through all files in the current directory (excluding hidden files)
for file in *; do
    # Check if the file actually exists (handles case when no files match the pattern)
    if [ -e "$file" ]; then
        # Check if the filename contains a dash
        if [[ "$file" == *-* ]]; then
            # Extract the part after the first dash using parameter expansion
            # ${file#*-} removes everything up to and including the first dash
            echo "${file#*-}"
        else
            # If no dash is present, display the whole filename
            echo "$file"
        fi
    fi
done
