#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the iteration number

# Initialize counter
counter=1

# Use while loop to iterate from 1 to 10
while [ $counter -le 10 ]; do
    # Use if-elif-else to check for specific iterations and display appropriate messages
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    
    # Increment the counter
    counter=$((counter + 1))
done
