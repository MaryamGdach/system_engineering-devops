#!/usr/bin/env bash
# This script displays numbers from 1 to 20 with special bad luck messages for certain numbers

# Initialize counter
counter=1

# Use while loop to iterate from 1 to 20
while [ $counter -le 20 ]; do
    # Display the current number
    echo $counter
    
    # Use case statement to check for specific numbers and display bad luck messages
    case $counter in
        4)
            echo "bad luck from China"
            ;;
        9)
            echo "bad luck from Japan"
            ;;
        17)
            echo "bad luck from Italy"
            ;;
    esac
    
    # Increment the counter
    counter=$((counter + 1))
done
