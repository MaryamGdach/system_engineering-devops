#!/usr/bin/env bash
# This script displays "Best School" 10 times, with an additional "Hi" message on the 9th iteration

# Initialize counter
counter=1

# Use while loop to iterate 10 times
while [ $counter -le 10 ]; do
    # Display "Best School" for every iteration
    echo "Best School"
    
    # Use if statement to check for the 9th iteration
    if [ $counter -eq 9 ]; then
        echo "Hi"
    fi
    
    # Increment the counter
    counter=$((counter + 1))
done
